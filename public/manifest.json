{
  "manifest_version": 2,
  "name": "purify",
  "author": "wang pin",
  "version": "0.0.1",
  "description": "Purify the web pages by removing images and style-sheets, etc",
  "browser_action": {
    "default_icon": {              
      "16": "Icon-16.png",
      "48": "Icon-48.png"
    },
    "default_title": "Purify",
    "default_popup": "index.html"  
  },
  "icons": {
    "16": "Icon-16.png",
    "48": "Icon-48.png",
    "128": "Icon-128.png"
  },
  "permissions": ["storage", "activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "include_globs": ["static/js/*.js"]
    }
  ]
}
